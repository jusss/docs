git clone https://aur.archlinux.org/snapd.git
cd snapd
makepkg -si

sudo systemctl enable --now snapd.socket
sudo ln -s /var/lib/snapd/snap /snap
sudo systemctl start snapd.socket

export PATH=$PATH:/var/lib/snapd/snap/bin
sudo snap install telega

cd /var/lib/snapd/snap/bin/
sudo snap alias telega.telega-server telega-server

M-x package-install RET telega RET
(add-to-list 'load-path "/snap/telega/current/share/emacs/site-lisp/telega/")
(require 'telega)
(setq exec-path (append exec-path '("/var/lib/snapd/snap/bin")))

