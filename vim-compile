git clone https://github.com/vim/vim.git && cd vim && mkdir /home/john/vim9
# other path than default, make distclean if re-do
# ./configure --prefix=/home/john/vim9
# if you want enable some features on vim --version's output
# or install vim-nox on debian, gvim on archlinux
# apt install python3-dev;
./configure --enable-fail-if-missing --enable-python3interp --prefix=/home/john/vim9
make -j8
# make DESTDIR=/home/john/vim9/ install
make install
# export PATH=$PATH:/home/john/vim9/bin
# if there's default vim, you can use alias to use the new one
echo "alias vim='/home/john/vim9/bin/vim'" >> ~/.bashrc
or apt install vim-nox
echo "alias vim='vim.nox'" >> ~/.bashrc
source .bashrc
