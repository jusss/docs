mount -o bind /dev ./dev
mount -t proc /proc ./proc
mount -t sysfs /sys ./sys
mount -t devpts /dev/pts ./dev/pts
chroot . /bin/bash
su
cd
vi /etc/group
inet:x:3003:root
net_raw:x:3004:root
rm /etc/resolv.conf
vi /etc/resolv.conf
nameserver 8.8.8.8
vi /etc/pacman.d/gnupg/gpg.conf
keyserver hkp://keys.gnupg.net
pacman -Su archlinux-keyring
vi /etc/pacman.conf
SigLevel = Never
